---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

---

<Layout
  title="Contato | Aulas de Latim Online"
  description="Entre em contato conosco para agendar sua aula experimental de latim ou tirar suas dúvidas."
>
  <Navigation />
  <main>
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-5xl font-bold text-center mb-8">Entre em Contato</h1>
          <div class="grid md:grid-cols-2 gap-12">
            <div>
              <h2 class="text-2xl font-bold mb-6">Informações de Contato</h2>
              <div class="space-y-4">
                <div>
                  <h3 class="font-bold">Email</h3>
                  <a href="mailto:contato@aulasdelatim.com.br" class="text-secondary hover:text-red-600">
                    contato@aulasdelatim.com.br
                  </a>
                </div>
                <div>
                  <h3 class="font-bold">WhatsApp</h3>
                  <a
                    href="https://wa.me/5511999999999"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-secondary hover:text-red-600"
                  >
                    +55 (11) 99999-9999
                  </a>
                </div>
                <div>
                  <h3 class="font-bold">Horário de Atendimento</h3>
                  <p>Segunda a Sexta: 8h às 20h</p>
                  <p>Sábado: 9h às 15h</p>
                </div>
              </div>
            </div>
            <div>
              <h2 class="text-2xl font-bold mb-6">Formulário de Contato</h2>
              <form class="space-y-4" action="/api/contact" method="POST">
                <div>
                  <label class="block text-gray-700 mb-2" for="name">Nome</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  />
                </div>
                <div>
                  <label class="block text-gray-700 mb-2" for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  />
                </div>
                <div>
                  <label class="block text-gray-700 mb-2" for="subject">Assunto</label>
                  <select
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  >
                    <option value="aula-experimental">Aula Experimental</option>
                    <option value="duvidas">Dúvidas</option>
                    <option value="outros">Outros</option>
                  </select>
                </div>
                <div>
                  <label class="block text-gray-700 mb-2" for="message">Mensagem</label>
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    required
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary"
                  ></textarea>
                </div>
                <button
                  type="submit"
                  class="w-full bg-secondary hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300"
                >
                  Enviar Mensagem
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>